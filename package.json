{
  "name": "cara-dashboard",
  "version": "0.1.0",
  "private": true,
  "proxy": "https://backend-staging.gohidoc.com",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "start": "cross-env HTTPS=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "test:e2e:run": "cross-env START_SERVER_AND_TEST_INSECURE=1 start-server-and-test 'yarn start' https://localhost:3000/ 'yarn cy:run'",
    "test:e2e:dev": "cross-env START_SERVER_AND_TEST_INSECURE=1 start-server-and-test 'yarn start' https://localhost:3000/ 'yarn cy:open'",
    "eject": "react-scripts eject",
    "lint": "eslint . --cache",
    "type-check": "tsc --noEmit",
    "format": "prettier --config .prettierrc --write 'src/**/*.{js,jsx,ts,tsx}'",
    "ci": "yarn test && yarn test:e2e"
  },
  "dependencies": {
    "@date-io/moment": "^1.3.13",
    "@formatjs/intl-pluralrules": "^1.5.9",
    "@formatjs/intl-relativetimeformat": "^4.5.16",
    "@material-ui/core": "4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/pickers": "^3.2.10",
    "@sentry/browser": "^5.15.4",
    "axios": "^0.19.2",
    "browser-locale": "^1.0.3",
    "chart.js": "^2.9.3",
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "react": "16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-chartjs-2": "^2.9.0",
    "react-dom": "16.13.1",
    "react-hook-form": "^5.2.0",
    "react-intl": "^4.5.5",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "3.4.1",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "uuid": "^7.0.2"
  },
  "devDependencies": {
    "@testing-library/cypress": "^5.3.1",
    "@types/chart.js": "^2.9.16",
    "@types/classnames": "^2.2.10",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/enzyme-to-json": "^1.5.2",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/node": "^14.0.4",
    "@types/prop-types": "^15.5.6",
    "@types/react": "^16.9.26",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-test-renderer": "^16.9.2",
    "@types/redux-logger": "^3.0.6",
    "@types/redux-mock-store": "^1.0.2",
    "@types/testing-library__cypress": "^5.0.5",
    "@types/uuid": "^7.0.2",
    "cross-env": "^7.0.2",
    "cypress": "4.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-prettier": "^3.1.2",
    "is-ci-cli": "^2.1.1",
    "jest-mock-axios": "^4.0.0",
    "prettier": "^2.0.2",
    "react-test-renderer": "^16.13.1",
    "redux-mock-store": "^1.5.4",
    "start-server-and-test": "^1.11.0",
    "typescript": "~3.7.2"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
